<div 
    x-data="{
        handleItemClick: function (mediaId, event) {
            if (! mediaId) return;
            // Handle Multi-Select (Cmd/Ctrl click)
            if ($wire.isMultiple && event && (event.metaKey || event.ctrlKey)) {
                if (this.isSelected(mediaId)) {
                    let toRemove = Object.values($wire.selected).find(obj => obj.id == mediaId)
                    if(toRemove) $wire.removeFromSelection(toRemove.id);
                } else {
                    $wire.addToSelection(mediaId);
                }
            } else {
                // Handle Single Select
                if ($wire.selected.length === 1 && $wire.selected[0].id == mediaId) {
                     // If clicking already selected item, do nothing or deselect (preference)
                     // $wire.removeFromSelection($wire.selected[0].id); 
                } else {
                    // For single select mode, we just replace the selection
                    if (!$wire.isMultiple) {
                         // We rely on backend 'addToSelection' clearing if not multiple, or we clear manually
                         // $wire.selected = []; 
                    }
                    $wire.addToSelection(mediaId);
                }
            }
        },
        isSelected: function (mediaId) {
            return Object.values($wire.selected).find(obj => obj.id == mediaId) !== undefined;
        }
    }"
    class="h-[85vh] flex flex-col bg-white dark:bg-gray-900 -m-6 box-border"
